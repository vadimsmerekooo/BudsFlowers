@using BudsFlowers.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager



<ul class="nav col-lg-2 justify-content-lg-end">
</ul>

<ul class="nav col-lg-2 justify-content-lg-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Профиль">
                <i class="bi bi-person-check "
                   style="font-size: 1.4rem;"></i>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" title="Авторизация">
                <i class="bi bi-person"
                   style="font-size: 1.4rem;"></i>
            </a>
        </li>
    }

    <li class="nav-item position-relative">
        <a class="nav-link" href="index.html">
            <div class="notification badge position-absolute rounded-circle text-white"
                 style="top: 0.5rem; right: 0.5rem">
                1
            </div>
            <i class="bi bi-basket " style="font-size: 1.4rem;"></i>
        </a>
    </li>
</ul>
