@model BasketViewModel
@{
    ViewData["Title"] = "Корзина";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
        <li class="breadcrumb-item">
            <a class="link-body-emphasis" href="#">
                <i class="bi bi-house"></i>
                <span class="visually-hidden">Главная</span>
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Корзина
        </li>
    </ol>
</nav>
<hr>

<section class="h-100">
    <div class="container">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">@Model.Basket.Flowers.Count() позиции</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Basket.Flowers)
                        {
                            <div class="row position-relative">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <div class="rounded">
                                        <img src="@item.FlowerId" class="w-100" alt="..." />
                                    </div>
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <p><strong>@item.FlowerId</strong></p>
                                    <h6 class="text-danger fw-bold ">
                                        <span class="text-muted text-decoration-line-through me-2">
                                            120
                                            руб.
                                        </span> 105 руб.
                                    </h6>
                                    <p class="bg-success text-white px-3 py-1 rounded-2">
                                        В наличии
                                    </p>
                                    <small class="text-secondary ">Артикул: @item.FlowerId</small>
                                    <br>
                                    <span>
                                        <i class="bi bi-star-fill star"></i><i class="bi bi-star-fill star"></i><i class="bi bi-star-fill star"></i><i class="bi bi-star-fill star"></i><i class="bi bi-star star"></i> 3 отзыва
                                    </span>
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 text-center ">
                                    <div class="d-flex mb-4 w-100 justify-content-center ">
                                        <div class="number">
                                            <button class="number-minus" type="button"
                                                    onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.onchange();">
                                                -
                                            </button>
                                            <input type="number" min="1" max="100" value="1" readonly>
                                            <button class="number-plus" type="button"
                                                    onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.onchange();">
                                                +
                                            </button>
                                        </div>
                                    </div>

                                    Итого:
                                    <h6 class="fw-bold ">105 руб.</h6>
                                </div>

                                <a href="#" title="Убрать с корзины">
                                    <div class="badge bg-dark text-white position-absolute"
                                         style="top: 0rem; right: 0.5rem">
                                        <i class="bi bi-x"></i>
                                    </div>
                                </a>
                            </div>

                            <hr class="my-4" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Выберите время доставки</strong></p>
                        <div class="form-group row">
                            <div class="col">
                                <input type="text" class="form-control picker__input" id="pick-date"
                                       placeholder="Выберите дату" readonly="" aria-haspopup="true"
                                       aria-expanded="false" aria-readonly="false" aria-owns="pick-date_root">
                            </div>
                            <div class="col">
                                <select class="form__field">
                                    <option selected>10 &#x2070;&#x2070; - 11 &#x2070;&#x2070;</option>
                                    <option value="1">11 &#x2070;&#x2070; - 12 &#x2070;&#x2070;</option>
                                    <option value="2">12 &#x2070;&#x2070; - 13 &#x2070;&#x2070;</option>
                                    <option value="2">13 &#x2070;&#x2070; - 14 &#x2070;&#x2070;</option>
                                    <option value="2">14 &#x2070;&#x2070; - 15 &#x2070;&#x2070;</option>
                                    <option value="2">15 &#x2070;&#x2070; - 16 &#x2070;&#x2070;</option>
                                    <option value="2">16 &#x2070;&#x2070; - 17 &#x2070;&#x2070;</option>
                                    <option value="2">17 &#x2070;&#x2070; - 18 &#x2070;&#x2070;</option>
                                    <option value="2">18 &#x2070;&#x2070; - 19 &#x2070;&#x2070;</option>
                                    <option value="2">19 &#x2070;&#x2070; - 20 &#x2070;&#x2070;</option>
                                    <option value="2">20 &#x2070;&#x2070; - 21 &#x2070;&#x2070;</option>
                                    <option value="2">21 &#x2070;&#x2070; - 22 &#x2070;&#x2070;</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Итого</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Стоимость

                                <h6 class="text-danger fw-bold ">
                                    <span class="text-muted text-decoration-line-through me-2">
                                        120
                                        руб.
                                    </span> 105 руб.
                                </h6>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Доставка
                                <span>4.00 руб.</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Итоговая стоимость</strong>
                                </div>
                                <span><strong>109.00 руб.</strong></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-outline-color color mt-auto">
                            Перейти к оформлению
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
