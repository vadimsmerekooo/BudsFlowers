@using BudsFlowers.Areas.Identity.Data
@using BudsFlowers.Views.Admin
@model List<Review>
@{
    ViewData["Title"] = "Отзывы";
    ViewData["ActivePage"] = AdminNavPages.Reviews;
}

<div class="p-3">
    <div class="row">
        <div class="col-md-2">
            <partial name="_AdminNavPartial" />
        </div>
        <div class="col-md-9 border-start text-white py-2">
            <partial name="../Partials/_StatusMessage" for="@TempData["StatusMessage"]" />
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    @ViewData["Title"]
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Дата</th>
                                <th>Имя</th>
                                <th>Почта</th>
                                <th>Тип</th>
                                <th>Оценка</th>
                                <th>Текст</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Дата</th>
                                <th>Имя</th>
                                <th>Почта</th>
                                <th>Тип</th>
                                <th>Оценка</th>
                                <th>Текст</th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.Date</th>
                                    <th>@item.FirstName</th>
                                    <th>@item.Email</th>
                                    <th>@item.Type</th>
                                    <th class="d-flex"><partial name="../Partials/_StarPartial" model="@item.Star" /></th>
                                    <th>@item.Description</th>
                                    <td>
                                        <a asp-controller="Admin" asp-action="DeleteReview" asp-route-id="@item.Id" class="btn btn-danger" title="Удалить"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
