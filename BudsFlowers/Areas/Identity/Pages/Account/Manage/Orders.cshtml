@page "/account/orders"
@model OrdersModel
@{
    ViewData["Title"] = "Заказы";
    ViewData["ActivePage"] = ManageNavPages.Orders;
}

<h6>@ViewData["Title"]</h6>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row px-3">
    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Дата оформления</th>
                        <th>Кол-во товаров</th>
                        <th>Сумма без скидки</th>
                        <th>Итоговая сумма</th>
                        <th>Статус</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Номер</th>
                        <th>Дата оформления</th>
                        <th>Кол-во товаров</th>
                        <th>Сумма без скидки</th>
                        <th>Итоговая сумма</th>
                        <th>Статус</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <th><a asp-area="Identity" asp-page="/Account/Manage/OrderInfo" asp-route-id="@item.Id">#@item.Number</a></th>
                            <th>@item.DateCreate</th>
                            <th>@item.Flowers.Count()</th>
                            <th>@item.TotalPrice руб.</th>
                            <th>@item.TotalSale руб.</th>
                            <th>-</th>
                            <th>
                                -
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
